<%- include('header'); -%>

<body>

  <div class="box" id="heading">
    <h1><%= today %> </h1>
    <h2>Total COVID-19 Cases: <%= cases %> </h2>
    <p>Let's try to focus on the positive, what are you going to do next?</p>
  </div>

  <div class="box">
    <% for (var i=0; i<newItems.length; i++) { %>
    <div class="item">
      <input type="checkbox">
      <p> <%= newItems[i] %> </p>
    </div>
    <% } %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem"placeholder="New Item" autocomplete="off">
    <button type="submit" name="button">+</button>
  </form>
  </div>

<%- include('footer'); -%>
